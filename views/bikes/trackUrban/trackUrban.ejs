      <a class="dropdown-item" href="#">By Price (desc)</a>
    </div>
  </div>

    <div class="row text-center " id="bikesContainer"  >
       <% tUBikes.forEach(function(bike){ %>
           <div class=" " id="bike">
               <div class="thumbnail bikeInfo">
                <a href="/shop/bikes/<%= bike._id %>">  
                    <img src="<%= bike.mainImage %>">
                </a> 
                  <div class="caption">
                      <h4 id="bikeName"><%= bike.name %></h4>
                      <h4 id="bikePrice">$<%= bike.price.toLocaleString(); %>.00</h4>
                  </div>
                  <p>
                     
                  </p>
               </div>
           </div>
       <% }); %>
   </div>
</div>

