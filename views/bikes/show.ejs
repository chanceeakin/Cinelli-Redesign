                  <p><%= bike.casette %></p>
                </div>
                <div>
                  <h6>Crankset</h6>
                  <p><%= bike.crankset %></p>
                </div>
                <div>
                  <h6>Chain</h6>
                  <p><%= bike.chain%></p>
                </div>
              </div>
            <!-- WHEELS -->
            <div class="specificationCategories">
              <h5>Wheels</h5>
                <div>
                  <h6>Tire Clearance</h6>
                  <p><%= bike.tireClearance %></p>
                </div>
                <div>
                  <h6>Hub Spacing</h6>
                  <p><%= bike.hubSpacing %></p>
                </div>
                <div>
                  <h6>Wheels</h6>
                  <p><%= bike.wheels %></p>
                </div>
