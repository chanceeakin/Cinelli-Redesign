                  <p><%= bike.headset %></p>
                </div>
            </div>
            <!-- BRAKES -->
            <div class="specificationCategories">
              <h5>Brakes</h5>
                <div>
                  <h6>Brakes</h6>
                  <p><%= bike.brakes %></p>
                </div>
              </div>
            <!-- DRIVETRAIN -->
            <div class="specificationCategories">
              <h5>Drivetrain</h5>
                <div>
                  <h6>BottomBracket</h6>
                  <p><%= bike.bottomBracket %></p>
                </div>
