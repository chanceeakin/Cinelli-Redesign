<%- include("../partials/header") %>

                  
    <div id="showCarousel" class="carousel slide" data-interval="false" data-ride="carousel">
      <!-- Indicators -->
      <ul class="carousel-indicators">
        <li data-target="#showCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#showCarousel" data-slide-to="1"></li>
        <li data-target="#showCarousel" data-slide-to="2"></li>
      </ul>
      
      <!-- The slideshow -->
      <div class="carousel-inner">
        <% var gallery = bike.gallery %>                         
        <% gallery.forEach(function(img) { %> 
       <div class="carousel-item">
          <img src="<%= img.image %>">
        </div>
        <% }); %>
        <div class="carousel-item active">
          <img src="<%= bike.mainImage %>">
        </div>
      </div>
      
      <!-- Left and right controls -->
      <a class="carousel-control-prev carouselIcon" href="#showCarousel" data-slide="prev">
        <span class=""><i class="fas fa-angle-left fa-2x"></i></span>
      </a>
      <a class="carousel-control-next carouselIcon" href="#showCarousel" data-slide="next">
        <span class=""><i class="fas fa-angle-right fa-2x"></i></span>
      </a>
    </div>
    <div id="borderHeaderBottom">
      <ul> 
          <li class="bottomBorderColors" id="red"></li>
          <li class="bottomBorderColors" id="yellow"></li>
          <li class="bottomBorderColors" id="black"></li>
          <li class="bottomBorderColors" id="green"></li>
      </ul>
  </div>

  <div class="caption-full">
    <div id="itemDescription">
      <h4 id="itemName"><a> <%= bike.name %> </a></h4>
      <h4 class="" id="price">$<%= bike.price.toLocaleString(); %>.00</h4>
    </div>
    <div id="itemButtons">
        <button id="addToCart">Add to Cart</button>
        <select name="bikeSize" class="custom-select" id="" aria-label="">
            <% var sizes = bike.sizes %>                         
            <% sizes.forEach(function(bikeSize) { %> 
            <option value="<%= bikeSize.size %>"> <%= bikeSize.size %> </option>
            <% }); %>
        </select>
    </div>
    
      <!-- ADMIN ADD/DELETE BUTTONS -->
        <div id="editDeleteButtons">
          <a id="editButton" class="btn btn-xs btn-warning" href="/shop/bikes/<%= bike.id %>/edit">Edit</a>
          <form id="delete-form" action="/shop/bikes/<%= bike._id %>?_method=DELETE" method="POST">
              <button id="deleteButton" class="btn btn-xs btn-danger">Delete</button>
          </form>
        </div>
  </div>

  <!-- DESCRIPTION -->
  <div id="itemParagraph">
    <p> <%= bike.description %> </p>
  </div>
  <div id="colorSeparator"></div>

  <!-- SPECIFICATIONS -->
